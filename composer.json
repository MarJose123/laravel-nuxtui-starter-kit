{
    "$schema": "https://getcomposer.org/schema.json",
    "name": "marjose123/starter-kit",
    "type": "project",
    "description": "The starter kit application for the Laravel framework that utilizes Vue, NuxtUi, TailwindCss, and other Laravel packages.",
    "keywords": [
        "laravel",
        "framework",
        "starter-kit",
        "nuxtui-laravel"
    ],
    "license": "MIT",
    "require": {
        "php": "^8.4",
        "ext-curl": "*",
        "inertiajs/inertia-laravel": "^2.0",
        "laravel/fortify": "^1.30",
        "laravel/framework": "^12.0",
        "laravel/sanctum": "^4.0",
        "laravel/tinker": "^2.10.1",
        "tightenco/ziggy": "^2.6"
    },
    "require-dev": {
        "driftingly/rector-laravel": "^2.0",
        "fakerphp/faker": "^1.23",
        "larastan/larastan": "^3.7",
        "laravel/pail": "^1.2.2",
        "laravel/pint": "^1.24",
        "laravel/sail": "^1.41",
        "mockery/mockery": "^1.6",
        "nunomaduro/collision": "^8.6",
        "pestphp/pest": "^4.1",
        "pestphp/pest-plugin-browser": "^4.1",
        "pestphp/pest-plugin-laravel": "^4.0",
        "rector/rector": "^2.1"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi"
        ],
        "post-update-cmd": [
            "@php artisan vendor:publish --tag=laravel-assets --ansi --force"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi",
            "@php -r \"file_exists('database/database.sqlite') || touch('database/database.sqlite');\"",
            "@php artisan migrate --graceful --ansi"
        ],
        "dev": [
            "Composer\\Config::disableProcessTimeout",
            "npx concurrently \"composer mailpit\" \"php artisan queue:listen --tries=1\" \"php artisan schedule:work\" \"npm run dev\" --names=mailserver,queue,scheduler,vite --kill-others  -c auto"
        ],
        "dev:ssr": [
            "npm run build:ssr",
            "Composer\\Config::disableProcessTimeout",
            "npx concurrently -c \"#93c5fd,#c4b5fd,#fb7185,#fdba74\" \"php artisan serve\" \"php artisan queue:listen --tries=1\" \"php artisan pail --timeout=0\" \"php artisan inertia:start-ssr\" --names=server,queue,logs,ssr --kill-others"
        ],
        "format:be": [
            "vendor/bin/pint"
        ],
        "format:fe": [
            "npm run format",
            "npm run lint"
        ],
        "format": [
            "@format:be",
            "@format:fe"
        ],
        "mailpit": [
            "Composer\\Config::disableProcessTimeout",
            ".bin/mailpit.exe --smtp-auth-accept-any --smtp-auth-allow-insecure --use-message-dates --tags-username"
        ],
        "mailpit:update": [
            "Composer\\Config::disableProcessTimeout",
            "@php .bin/updater.php"
        ],
        "rector": [
            "vendor/bin/rector process --ansi"
        ],
        "rector:check": [
            "vendor/bin/rector process --dry-run --ansi"
        ],
        "analyse": [
            "Composer\\Config::disableProcessTimeout",
            "vendor/bin/phpstan analyse --memory-limit=2G --ansi"
        ],

        "test": [
            "@php artisan config:clear --ansi",
            "@php artisan test"
        ]
    },
    "scripts-descriptions": {
        "dev": "Run the development server",
        "dev:ssr": "Run the development server with SSR",
        "test": "Run the tests",
        "format:be": "Fixing the Code Style according to PER standards for the backend code",
        "format:fe": "Fixing the Code Style according to PER standards for the frontend code",
        "format": "Fixing the Code Style according to PER standards for both backend and frontend code",
        "mailpit": "Run the mailpit server for testing emails",
        "rector": "Fixing the code according to the Rector Rules",
        "rector:check": "Showing the suggested changes from Rector",
        "analyse": "Analyse the code with PHPStan code analysis"
    },
    "extra": {
        "laravel": {
            "dont-discover": []
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "php-http/discovery": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
